<% provide(:title, @user.login) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1><%= gravatar_for @user %> <%= @user.login %>'s profile</h1>
      <ul>
        <li>Name: <%= @user.name %> <%= @user.surname %></li>
        <li>Age: <%= @user.age %></li>
        <li>Email: <%= @user.email %></li>
      </ul>
    </section>
  </aside>
</div>

