<% provide(:title, "Edit recipe") %>
<h1>Update a recipe</h1>

<div class="row">
	<div class="span8 offset3">
    <%= form_for(@recipe) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :short, "Short description" %>
      <%= f.text_field :short %>
      
      <%= f.label :difficulty %>
      <%= f.text_field :difficulty %>

      <%= f.label :serving %>
      <%= f.text_field :serving %>

      <%= f.label :detail, "Content" %>
      <%= f.text_area  :detail %>
      <br />
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>